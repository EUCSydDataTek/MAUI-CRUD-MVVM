<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MVVM_INPC.Views.AddEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:MVVM_INPC.Converters"
    xmlns:vm="clr-namespace:MVVM_INPC.ViewModels"
    Title="AddEditPage"
    x:DataType="vm:AddEditPageViewModel"
    Shell.PresentationMode="ModalAnimated">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Start">

        <Entry
            FontSize="32"
            HorizontalOptions="Start"
            Placeholder="Name"
            Text="{Binding Person.Name}" />

        <Entry
            FontSize="18"
            HorizontalOptions="Start"
            Placeholder="Age"
            Text="{Binding Person.Age, Converter={converter:DoNothingConverter}}" />

        <HorizontalStackLayout Spacing="20">
            <Button
                Command="{Binding MakeOlderCommand}"
                HorizontalOptions="Start"
                Text="Make Older" />

            <Button
                Command="{Binding SaveCommand}"
                HorizontalOptions="Start"
                Text="Save" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>