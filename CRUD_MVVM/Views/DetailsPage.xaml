<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MVVM_INPC.Views.DetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MVVM_INPC.ViewModels"
    Title="DetailsPage"
    x:DataType="vm:DetailsPageViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding DeleteCommand}" Text="DELETE" />
        <ToolbarItem Command="{Binding GoToAddEditCommand}" Text="EDIT" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

        <Label
            FontSize="32"
            HorizontalOptions="Center"
            Text="{Binding Person.Name}" />

        <Label
            FontSize="18"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level2"
            Text="{Binding Person.Age}" />

    </VerticalStackLayout>
</ContentPage>