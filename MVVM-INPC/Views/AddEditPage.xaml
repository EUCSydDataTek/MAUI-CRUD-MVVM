<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MVVM_INPC.ViewModels"
             xmlns:converter="clr-namespace:MVVM_INPC.Converters"
             x:Class="MVVM_INPC.Views.AddEditPage"
             Title="AddEditPage"
             Shell.PresentationMode="ModalAnimated"
             x:DataType="vm:AddEditPageViewModel">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

        <Entry
                Text="{Binding Person.Name}"
                Placeholder="Name"
                FontSize="32"
                HorizontalOptions="Center" />

        <Entry
                Text="{Binding Person.Age, Converter={converter:DoNothingConverter}}"
                Placeholder="Age"
                FontSize="18"
                HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="20">
            <Button
                Text="Make Older"
                HorizontalOptions="Start" 
                Command="{Binding MakeOlderCommand}"/>

            <Button
                Text="Save"
                HorizontalOptions="Start" 
                Command="{Binding SaveCommand}"/>
        </HorizontalStackLayout>
       

    </VerticalStackLayout>
</ContentPage>