<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MVVM_INPC.ViewModels"
             x:Class="MVVM_INPC.Views.MainPage"
             x:DataType="vm:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding ThePerson.Name}"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding ThePerson.Age}"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                Text="Details"
                HorizontalOptions="Center" 
                Command="{Binding GoToDetailsCommand}"/>

            <Button
                Text="Make Older"
                HorizontalOptions="Center" 
                Command="{Binding MakeOlderCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
